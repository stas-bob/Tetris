<UserControl x:Class="TetrisHTW.View.AboutView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
	d:DesignWidth="673" d:DesignHeight="480">
    <StackPanel x:Name="LayoutRoot">
        <TextBlock HorizontalAlignment="Center" Name="textBlock1"
			Text="{StaticResource AboutText}" VerticalAlignment="Top" Margin="130"
			TextWrapping="Wrap" />

        <Button Content="Zurück" Style="{StaticResource ButtonStyle1}"
			Click="BackButton_Click" />
    </StackPanel>
</UserControl>
