            <Grid x:Name="LayoutRoot" Height="510" Width="285" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="72" />
                    <RowDefinition Height="72" />
                    <RowDefinition Height="72" />
                    <RowDefinition Height="175" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="85" />
                    <ColumnDefinition Width="59*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" >
                    <TextBlock Text="Score" HorizontalAlignment="Center"/>
                    <TextBlock Text="" Name="scoreText" HorizontalAlignment="Center"/>
                <StackPanel.Background>
                    <LinearGradientBrush>
                        <LinearGradientBrush.Transform>
                            <RotateTransform Angle="50"/>
                        </LinearGradientBrush.Transform>
                        <GradientStop Color="Transparent" Offset="0.0"/>
                        <GradientStop x:Name="target" Color="red" Offset="2"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="1">
                <TextBlock Text="Lines" HorizontalAlignment="Center"/>
                <TextBlock Text="" Name="linesText" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="3">
                    <TextBlock Text="Vorschau" HorizontalAlignment="Center" Height="17"/>
                    <Grid Name="previewGrid" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="14" />
                            <RowDefinition Height="14" />
                            <RowDefinition Height="14" />
                            <RowDefinition Height="14" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="14" />
                            <ColumnDefinition Width="14" />
                            <ColumnDefinition Width="14" />
                    </Grid.ColumnDefinitions>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="2">
                    <TextBlock Text="Level" HorizontalAlignment="Center"/>
                    <TextBlock Text="" Name="levelText" HorizontalAlignment="Center"/>
                </StackPanel>


                <Grid Name="boardGrid" Grid.Column="0" Grid.RowSpan="4">
                <Grid.Background>
                    <LinearGradientBrush Opacity="0.2">
                        <LinearGradientBrush.Transform>
                            <RotateTransform Angle="20"/>
                        </LinearGradientBrush.Transform>
                        <GradientStop Color="blue" Offset="0"/>
                        <GradientStop Color="Green" Offset="0.25"/>
                        <GradientStop Color="Yellow" Offset="0.5"/>
                        <GradientStop Color="Red" Offset="0.75"/>
                        <GradientStop Color="Violet" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                </Grid>
            </Grid>
