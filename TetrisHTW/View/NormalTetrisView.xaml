<UserControl x:Class="TetrisHTW.NormalTetrisView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             d:DesignHeight="515" d:DesignWidth="800">
    <Canvas Name="canvas" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,250,400">
        <Canvas.Resources>
            <Storyboard x:Name="flyingAroundSB">
                <DoubleAnimation x:Name="animXT"  To="200" Storyboard.TargetName="T" Storyboard.TargetProperty="(Canvas.Left)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animYT"  To="300" Storyboard.TargetName="T" Storyboard.TargetProperty="(Canvas.Top)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animXL"  To="100" Storyboard.TargetName="L" Storyboard.TargetProperty="(Canvas.Left)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animYL"  To="500" Storyboard.TargetName="L" Storyboard.TargetProperty="(Canvas.Top)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animXJ"  To="800" Storyboard.TargetName="J" Storyboard.TargetProperty="(Canvas.Left)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animYJ"  To="400" Storyboard.TargetName="J" Storyboard.TargetProperty="(Canvas.Top)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animXO"  To="30" Storyboard.TargetName="O" Storyboard.TargetProperty="(Canvas.Left)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animYO"  To="200" Storyboard.TargetName="O" Storyboard.TargetProperty="(Canvas.Top)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animXI"  To="222" Storyboard.TargetName="I" Storyboard.TargetProperty="(Canvas.Left)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animYI"  To="10" Storyboard.TargetName="I" Storyboard.TargetProperty="(Canvas.Top)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animXS"  To="100" Storyboard.TargetName="S" Storyboard.TargetProperty="(Canvas.Left)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animYS"  To="200" Storyboard.TargetName="S" Storyboard.TargetProperty="(Canvas.Top)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animXZ"  To="100" Storyboard.TargetName="Z" Storyboard.TargetProperty="(Canvas.Left)" Duration="0:0:20" Completed="AnimCompleted"/>
                <DoubleAnimation x:Name="animYZ"  To="400" Storyboard.TargetName="Z" Storyboard.TargetProperty="(Canvas.Top)" Duration="0:0:20" Completed="AnimCompleted"/>
            </Storyboard>
            <Storyboard x:Name="rotatingSB">
                <DoubleAnimation x:Name="animRotateT" Storyboard.TargetName="rotateTransformT" Storyboard.TargetProperty="Angle" Duration="0:0:20" From="0" To="360" RepeatBehavior="forever"/>
                <DoubleAnimation x:Name="animRotateI" Storyboard.TargetName="rotateTransformI" Storyboard.TargetProperty="Angle" Duration="0:0:20" From="0" To="360" RepeatBehavior="forever"/>
                <DoubleAnimation x:Name="animRotateZ" Storyboard.TargetName="rotateTransformZ" Storyboard.TargetProperty="Angle" Duration="0:0:20" From="0" To="360" RepeatBehavior="forever"/>
                <DoubleAnimation x:Name="animRotateS" Storyboard.TargetName="rotateTransformS" Storyboard.TargetProperty="Angle" Duration="0:0:20" From="0" To="360" RepeatBehavior="forever"/>
                <DoubleAnimation x:Name="animRotateO" Storyboard.TargetName="rotateTransformO" Storyboard.TargetProperty="Angle" Duration="0:0:20" From="0" To="360" RepeatBehavior="forever"/>
                <DoubleAnimation x:Name="animRotateL" Storyboard.TargetName="rotateTransformL" Storyboard.TargetProperty="Angle" Duration="0:0:20" From="0" To="360" RepeatBehavior="forever"/>
                <DoubleAnimation x:Name="animRotateJ" Storyboard.TargetName="rotateTransformJ" Storyboard.TargetProperty="Angle" Duration="0:0:20" From="0" To="360" RepeatBehavior="forever"/>
            </Storyboard>
            <Storyboard x:Name="pauseOnSB">
                <DoubleAnimation x:Name="animPauseOn" Storyboard.TargetName="levelHint" Storyboard.TargetProperty="Opacity" Duration="0:0:0.4" To="1"/>
            </Storyboard>
            <Storyboard x:Name="pauseOffSB">
                <DoubleAnimation x:Name="animPauseOff" Storyboard.TargetName="levelHint" Storyboard.TargetProperty="Opacity" Duration="0:0:0.4" To="0"/>
            </Storyboard>
            <Storyboard x:Name="levelFontSizeSB">
                <!--<DoubleAnimation x:Name="animLevelFontSize" Storyboard.TargetName="levelText" Storyboard.TargetProperty="FontSize" Duration="0:0:1" From="30" To="12"/>-->
                <DoubleAnimation x:Name="animLevelFontScale" Storyboard.TargetName="levelTextFontScale" Storyboard.TargetProperty="ScaleX" Duration="0:0:1" From="30" To="1"/>
            </Storyboard>
        </Canvas.Resources>
        <Path Canvas.Left="200" StrokeThickness="8" Height="50" Width="75" Name="T" Data="M0,0 L0,0 L75,0 L75,25 L50,25 L50,50 L25,50 L25,25 L0,25 L0,0" Stroke="#16B800FF">
            <Path.RenderTransform>
                <RotateTransform x:Name="rotateTransformT"></RotateTransform>
            </Path.RenderTransform>
        </Path>
        <Path Canvas.Left="100" Canvas.Top="300" StrokeThickness="3" Height="30" Width="30" Name="O" Data="M0,0 L30,0 L30,30 L0,30 L0,0" Stroke="#1AFFD800">
            <Path.RenderTransform>
                <RotateTransform x:Name="rotateTransformO"></RotateTransform>
            </Path.RenderTransform>
        </Path>
        <Path Canvas.Left="-200" Canvas.Top="-200" StrokeThickness="10" Height="150" Width="100" Name="L" Data="M0,0 L0,150 L50,150 L50,50 L100,50 L100,0 L0,0" Stroke="#183BFF00" Fill="{x:Null}">
            <Path.RenderTransform>
                <RotateTransform x:Name="rotateTransformL"></RotateTransform>
            </Path.RenderTransform>
        </Path>
        <Path Canvas.Left="400" Canvas.Top="600" StrokeThickness="2" Height="50" Width="40" Name="J" Data="M0,0 L0,20 L20,20 L20,50 L40,50 L40,0 L0,0" Stroke="#1300FFEB">
            <Path.RenderTransform>
                <RotateTransform x:Name="rotateTransformJ"></RotateTransform>
            </Path.RenderTransform>
        </Path>
        <Path Canvas.Top="320" Canvas.Left="-100" StrokeThickness="5" Height="100" Width="25" Name="I" Data="M0,0 L0,100 L25,100 L25,0 L0,0" Stroke="#160062FF">
            <Path.RenderTransform>
                <RotateTransform x:Name="rotateTransformI"></RotateTransform>
            </Path.RenderTransform>
        </Path>
        <Path Canvas.Top="70" Canvas.Left="-160" StrokeThickness="5" Height="100" Width="100" Name="Z" Data="M0,0 L0,30 L30,30 L30,60 L90,60 L90,30 L60,30 L60,0 L0,0" Stroke="#0AFF0000">
            <Path.RenderTransform>
                <RotateTransform x:Name="rotateTransformZ"></RotateTransform>
            </Path.RenderTransform>
        </Path>

        <Path StrokeThickness="5" Height="70" Width="105" Name="S" Data="M0,35 L35,35 L35,0 L105,0 L105,35 L70,35 L70,70 L0,70 L0,35" Stroke="#19FF8900">
            <Path.RenderTransform>
                <RotateTransform x:Name="rotateTransformS"></RotateTransform>
            </Path.RenderTransform>
        </Path>
        <Border Name="levelHint" Width="150" Height="70" Canvas.ZIndex="1" CornerRadius="20" Canvas.Left="28" Canvas.Top="100" Opacity="0">
            <Canvas Background="DarkSlateBlue">
                <Canvas.Clip>
                    <RectangleGeometry RadiusX="20" RadiusY="20" Rect="0,0,150,70"/>
                </Canvas.Clip>
                <TextBlock Text="Pause" Name="levelHintTextBlock" FontSize="40" Foreground="White" Width="150" TextAlignment="Center"/>
                <Rectangle RadiusX="20" RadiusY="20" Width="200" Height="70">
                    <Rectangle.Fill>
                        <LinearGradientBrush>
                            <LinearGradientBrush.Transform>
                                <RotateTransform Angle="30"/>
                            </LinearGradientBrush.Transform>
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop Color="DarkOrchid" Offset="0.7"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Canvas>
        </Border>
        <Border Name="layoutBorder" BorderThickness="5" CornerRadius="10" Margin="0" BorderBrush="DarkBlue">
        <Grid x:Name="LayoutRoot" Height="400" Width="285">
                <Grid.RowDefinitions>
                    <RowDefinition Height="72" />
                    <RowDefinition Height="72" />
                    <RowDefinition Height="72" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="85" />
                <ColumnDefinition Width="59*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1">
                    <StackPanel.Background>
                        <SolidColorBrush Color="#eee"/>
                    </StackPanel.Background>
                    <StackPanel.Clip>
                        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="5, 3, 75, 50"/>
                    </StackPanel.Clip>
                        <TextBlock Text="Score" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
                <TextBlock Text="0" Name="scoreText" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="1">
                    <StackPanel.Background>
                        <SolidColorBrush Color="#eee"/>
                    </StackPanel.Background>
                    <StackPanel.Clip>
                        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="5, 3, 75, 50"/>
                    </StackPanel.Clip>
                    <TextBlock Text="Lines" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
                <TextBlock Text="0" Name="linesText" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="3">
                    <TextBlock Text="Vorschau" HorizontalAlignment="Center" Height="17" Style="{StaticResource TextBlockStyle}"/>
                    <Grid Name="previewGrid" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="14" />
                            <RowDefinition Height="14" />
                            <RowDefinition Height="14" />
                            <RowDefinition Height="14" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="14" />
                            <ColumnDefinition Width="14" />
                            <ColumnDefinition Width="14" />
                    </Grid.ColumnDefinitions>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="2">
                    <StackPanel.Background>
                        <SolidColorBrush Color="#eee"/>
                    </StackPanel.Background>
                    <StackPanel.Clip>
                        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="5, 3, 75, 50"/>
                    </StackPanel.Clip>
                    <TextBlock Text="Level" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
                    <TextBlock Text="0" Name="levelText" HorizontalAlignment="Center" Width="7">
                        <TextBlock.RenderTransform>
                            <ScaleTransform x:Name="levelTextFontScale" CenterX="3.5"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </StackPanel>

                
                <Grid Name="boardGrid" Grid.Column="0" Grid.RowSpan="4">
                <Grid.Background>
                    <LinearGradientBrush Opacity="0.8">
                        <LinearGradientBrush.Transform>
                            <RotateTransform Angle="20"/>
                        </LinearGradientBrush.Transform>
                        <GradientStop Color="DarkBlue" Offset="0"/>
                        <GradientStop Color="Violet" Offset="0.9"/>
                    </LinearGradientBrush>
                </Grid.Background>
                </Grid>
            </Grid>
        </Border>
    </Canvas>
</UserControl>
