<UserControl x:Class="TetrisHTW.View.OptionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <TextBlock Text="Spieloptionen"/>
            <TextBlock Text="Modus:"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton Content="Normal" GroupName="mode" IsChecked="True" />
                <RadioButton Content="Spezial" GroupName="mode" IsEnabled="False"/>
                <RadioButton Content="Kretschmer" GroupName="mode" IsEnabled="False"/>
            </StackPanel>
            
                
            <TextBlock Text="Level:"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Content="0" HorizontalAlignment="Center" />
                <Button Grid.Column="1" Grid.Row="0" Content="1" HorizontalAlignment="Center" />
                <Button Grid.Column="2" Grid.Row="0" Content="2" HorizontalAlignment="Center" />
                <Button Grid.Column="3" Grid.Row="0" Content="3" HorizontalAlignment="Center" />
                <Button Grid.Column="4" Grid.Row="0" Content="4" HorizontalAlignment="Center" />
                <Button Grid.Column="0" Grid.Row="1" Content="5" HorizontalAlignment="Center" />
                <Button Grid.Column="1" Grid.Row="1" Content="6" HorizontalAlignment="Center" />
                <Button Grid.Column="2" Grid.Row="1" Content="7" HorizontalAlignment="Center" />
                <Button Grid.Column="3" Grid.Row="1" Content="8" HorizontalAlignment="Center" />
                <Button Grid.Column="4" Grid.Row="1" Content="9" HorizontalAlignment="Center" />
            </Grid>
            
            <TextBlock Text="Anleitung:"/>
            <TextBlock Text="Test"/>
            <TextBlock Text="Spielername:"/>
            <TextBox Name="playerNameTextBox" />
            <Button Content="Spielen" Click="Spielen_Click"/>
            <Button Content="Zurück" Click="Zurueck_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
